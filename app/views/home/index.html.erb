<h1 class="text-center"> Intake Form</h1>
<p> <center>Complete the form below or call (800) 216-3463 if you have questions, need website assistance, or need technical support.</center></p>
<%= form_with url: "#", local: true, html: { class: "container mt-4" } do |form| %>
  <div class="form-group">
    <%= form.label :first_name, class: "form-label" %>
    <%= form.text_field :first_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :last_name, class: "form-label" %>
    <%= form.text_field :last_name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :email, class: "form-label" %>
    <%= form.email_field :email, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :message, class: "form-label" %>
    <%= form.text_area :message, class: "form-control" %>
  </div>

  <div>
    <%= form.submit "Send Message", class: "btn btn-primary" %>
  </div>
<% end %>